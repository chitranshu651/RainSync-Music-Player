<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="431.0" prefWidth="754.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <bottom>
      <VBox prefHeight="58.0" prefWidth="586.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="26.0" prefWidth="586.0">
               <children>
                  <JFXButton alignment="TOP_LEFT" onAction="#openFileButton" text="open file" />
                  <JFXButton alignment="TOP_LEFT" onAction="#stopButton" text="stop" />
                  <JFXButton alignment="TOP_LEFT" onAction="#playButton" text="play" />
                  <JFXButton alignment="TOP_LEFT" onAction="#pauseButton" text="pause" />
                  <JFXSlider fx:id="sliderVolume" prefHeight="14.0" prefWidth="146.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <top>
      <JFXTabPane BorderPane.alignment="CENTER">
         <tabs>
            <Tab text="Now Playing">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <StackPane prefHeight="332.0" prefWidth="754.0">
                           <children>
                              <ImageView fx:id="albumArt" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                              <JFXSlider fx:id="seekSlider" prefHeight="14.0" prefWidth="240.0" StackPane.alignment="BOTTOM_CENTER" />
                           </children>
                        </StackPane>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab text="Songs">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="342.0" prefWidth="742.0">
                     <children>
                        <TableView fx:id="tableView" layoutX="6.0" onMouseClicked="#clickItem" prefHeight="334.0" prefWidth="746.0">
                          <columns>
                            <TableColumn fx:id="tableArt" prefWidth="75.0" text="Art" />
                            <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
                              <TableColumn fx:id="albumCol" prefWidth="75.0" text="Album" />
                              <TableColumn fx:id="artistCol" prefWidth="75.0" text="Artists" />
                              <TableColumn fx:id="genreCol" prefWidth="75.0" text="Genre" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab text="Albums">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab text="Artists">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
         </tabs>
      </JFXTabPane>
   </top>
</BorderPane>
